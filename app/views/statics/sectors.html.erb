			<div class="v-sector-menu-vertical">
				<h3 class="v-sector-menu-vertical-cabecera">Sectores</h3>
				<ul class="v-sector-menu-vertical-lista" id="vMenu-servicios">
					<%@sectores.each do |sector|%>
						<li class="v-sector-menu-vertical-item"><a href="/sectores/<%=sector.id%>" class="v-sector-menu-vertical-link"><%=sector.nombre%></a></li>
